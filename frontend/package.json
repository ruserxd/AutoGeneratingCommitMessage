{
  "name": "codemanager",
  "displayName": "CodeManager",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "code-manager",
          "title": "code-manager",
          "icon": "$(heart)"
        }
      ]
    },
    "commands": [
      {
        "command": "code-manager.refreshFiles",
        "title": "刷新文件列表",
        "icon": "$(refresh)"
      }
    ],
    "views": {
      "code-manager": [
        {
          "id": "codeManagerView",
          "name": "Code Manager",
          "type": "webview",
          "icon": "$(heart)"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "code-manager.refreshFiles",
          "when": "view == codeManagerView",
          "group": "navigation"
        }
      ]
    }
  },
  "extensionDependencies": [
    "vscode.git"
  ],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.17.32",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@types/vscode": "^1.99.1",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vitejs/plugin-react": "^4.4.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.23.0",
    "typescript": "^5.8.3",
    "vite": "^6.3.2"
  },
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  }
}
